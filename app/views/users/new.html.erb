<% provide(:title, "Sign up") %>
<div class="container">
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :mobile, class: "form-label" %>
              <%= f.text_field :mobile, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :birthdate, class: "form-label" %>
              <%= f.date_field :birthdate, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3 form-group">
              <%= f.label :gender, class: "form-label" %>
              <%= f.select :gender, options_for_select(['Male', 'Female'], f.object.gender || 'Male'), { include_blank: false }, class: 'form-control', aria: { label: 'Default select example' }  %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3 form-group">
              <%= f.label :sexual_orientation, class: "form-label" %>
              <%= f.select :sexual_orientation, options_for_select(['Straight', 'Gay', 'Lesbian', 'Bisexual', 'Other'], f.object.sexual_orientation || 'Straight'), { include_blank: false }, class: 'form-control', aria: { label: 'Default select example' }%>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3 form-group">
              <%= f.label :gender_interest, class: "form-label" %>
              <%= f.select :gender_interest, options_for_select(['Male', 'Female'], f.object.gender_interest || 'Female'), { include_blank: false }, class: 'form-control', aria: { label: 'Default select example' } %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="mb-3">
              <%= f.label :country, class: "form-label" %>
              <%= f.text_field :country, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="mb-3">
              <%= f.label :state, class: "form-label" %>
              <%= f.text_field :state, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="mb-3">
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :school, class: "form-label" %>
              <%= f.text_field :school, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :bio, class: "form-label" %>
              <%= f.text_area :bio, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :password_confirmation, "Password Confirmation", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="mb-3">
              <%= f.label :image, "Photo", class: "form-label" %>
              <%= f.file_field :image, required: true%>
            </div>
          </div>
        </div>
        <br>
      <div class="col-md-12 text-center">
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>